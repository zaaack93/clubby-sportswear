{% comment %}theme-check-disable TemplateLength{% endcomment %}
{%- liquid
  assign section_color = section.settings.color_scheme

  assign current_variant = product.selected_or_first_available_variant
  assign featured_media = current_variant.featured_media | default: product.featured_media

  if section.settings.variant_media_behavior == 'swap'
    assign swap_media_on_desktop = true
  else
    assign swap_media_on_desktop = false
  endif

  assign media_ids = ''

  if featured_media
    assign media_ids = media_ids | append: featured_media.id | append: ','
  endif

  for media in product.media
    assign media_ids = media_ids | append: media.id | append: ','
  endfor

  assign media_ids_array = media_ids | split: ',' | uniq

  assign enable_video_looping = section.settings.enable_video_looping
  assign desktop_media_height = section.settings.desktop_media_height

  assign no_social_blocks = true

  for block in section.blocks
    if block.settings.section_area == 'product_extra'
      assign no_social_blocks = false
      break
    endif
  endfor

  assign complementary_products_block = section.blocks | where: 'type', 'complementary' | first
-%}

