<section
  class="bg-scheme-background text-scheme-text"
  id="{{ section.id }}"
  x-data="
    Theme_Product({
      product: {{ product | json | escape }},
      initialVariant: {{ current_variant | json | escape }},
      optionsWithValues: {{ product.options_with_values | json | escape }},
      featuredMediaId: {% if featured_media %}{{ featured_media.id }}{% else %}null{% endif %},
      shouldUpdateHistoryState: true,
      swapMediaOnDesktop: {{ swap_media_on_desktop | json }},
      templateSuffix: '{{ template.suffix }}'
    })
  "
  data-product-root="{{ section.id }}"
  data-color-scheme="{{ section_color }}"
>
  {%- liquid
    assign current_variant = product.selected_or_first_available_variant

    if section.settings.always_show_product_featured_media_first
      assign featured_media = product.featured_media
    else
      assign featured_media = current_variant.featured_media | default: product.featured_media
    endif

    assign has_interactive_media = false
    assign image_index = 0

    if product.media.size > 1
      assign slideshow_enabled = true
    endif

    for media in product.media
      if media.media_type != 'image'
        assign has_interactive_media = true
        break
      endif
    endfor
  -%}

  <div
    class="relative col-span-full {% if product.media.size > 1 %}pb-7{% endif %} product-media-container bg-scheme-background text-scheme-text {% unless settings.fill_image_to_border_edge %}border-b-gridline border-gridline-color lg:border-0{% endunless %}"
    data-product-media-container
  >
    <div
      class="{% if slideshow_enabled %}splide {% endif %}{% unless settings.fill_image_to_border_edge %} lg:py-4{% endunless %}"
      data-drag-disabled="{{ has_interactive_media }}"
      {% if slideshow_enabled %}
        data-slideshow-enabled="true"
      {% endif %}
      x-ref="splide"
    >
      <div
        class="transition-[max-height] splide__track{% if settings.fill_image_to_border_edge and slideshow_enabled %} border-b-gridline border-gridline-color{% endif %}{% unless settings.fill_image_to_border_edge %} lg:px-4{% endunless %}"
      >
        <ul
          class="splide__list w-full{% if settings.fill_image_to_border_edge %}{% else %} lg:gap-4{% endif %}"
          x-ref="mediaList"
        >
          {% for media_id_string in media_ids_array %}
            {%- liquid
              assign media_id = media_id_string | plus: 0
              assign media = product.media | where: 'id', media_id | first

              assign preload = false
              assign loading = 'lazy'

              if section.index == 1 and forloop.first
                assign preload = true
              endif

              if section.index <= 3 and forloop.index <= 4
                assign loading = 'eager'
              endif
            -%}
            <li
              {% if forloop.first %}
                data-first-media
              {% endif %}
              class="splide__slide relative bg-scheme-background w-full{% if settings.fill_image_to_border_edge %} lg:border-r-gridline lg:border-gridline-color{% endif %}"
              data-index="{{ forloop.index0 }}"
            >
              {%- render 'horizontal-gallery-product-media',
                media: media,
                image_index: image_index,
                desktop_media_height: desktop_media_height,
                slideshow_enabled: slideshow_enabled,
                section_color: section_color,
                enable_video_looping: enable_video_looping,
                preload: preload,
                loading: loading
              -%}
            </li>
            {%- liquid
              if media.media_type == 'image'
                assign image_index = image_index | plus: 1
              endif
            -%}
          {% endfor %}
        </ul>
      </div>
      {% assign first_3d_model = product.media
        | where: 'media_type', 'model'
        | first
      %}
      <div
        class="{% unless slideshow_enabled %}hidden {% else %}no-js:hidden {% endunless %}text-scheme-text mx-1 mt-2 grid grid-cols-[minmax(0,_1fr)_auto] gap-2 lg:mx-4"
        x-data="
          {
            paginationIsWrapped: false,
            checkIfWrapped() {
              this.paginationIsWrapped = hasWrappedChildren(this.$refs.pagination)
            }
          }
        "
        x-init="checkIfWrapped"
        @resize.window.debounce.250="checkIfWrapped"
      >
        <ul x-ref="pagination" class="splide__pagination"></ul>
        <div
          class="splide__arrows col-end-last flex items-center justify-end gap-1"
          :class="{ 'items-start pt-0.5' : paginationIsWrapped, 'items-center' : !paginationIsWrapped }"
        >
          <button class="splide__arrow splide__arrow--prev w-8">
            <span class="sr-only">
              {{- 'sections.slideshow.previous_slide' | t -}}
            </span>
            <span class="block">{% render 'icon-arrow-left' %}</span>
          </button>
          <button class="splide__arrow splide__arrow--next w-8">
            <span class="sr-only">
              {{- 'sections.slideshow.next_slide' | t -}}
            </span>
            <span class="block">{% render 'icon-arrow-right' %}</span>
          </button>
        </div>
      </div>
      {%- if first_3d_model -%}
        <div class="px-section-horizontal-spacing text-center">
          <button
            aria-label="{{ 'products.product.view_in_space_label' | t }}"
            class="product-single__view-in-space mb-2 mt-4 w-full max-w-sm border-text border-scheme-text py-2 pl-2 pr-4 text-center lg:my-4"
            data-shopify-xr
            data-shopify-model3d-id="{{ first_3d_model.id }}"
            data-shopify-title="{{ product.title }}"
            data-shopify-xr-hidden
          >
            <span class="inline-block w-6 align-middle">
              {%- render 'icon-3d-model' -%}</span
            ><span class="text-sm">
              {{- 'products.product.view_in_space' | t -}}
            </span>
          </button>
        </div>
      {%- endif -%}
    </div>
  </div>

  <div class="grid grid-flow-row-dense gap-gutter border-gridline-color bg-gridline-color lg:grid-cols-12 lg:border-y-gridline">
    <div class="h-full bg-scheme-background px-section-horizontal-spacing text-scheme-text lg:col-start-10 lg:col-end-13">
      <div class="product-block-area {% unless settings.border_width == 0 %}py-section-vertical-spacing{% endunless %} lg:sticky lg:top-sticky-header">
        {%- liquid
          assign product_form_id = 'product-form-' | append: section.id
          assign tab_counter = 0

          for block in section.blocks
            assign supported_blocks = 'title, vendor, price, variant_picker, quantity_selector, buy_buttons'
            if block.settings.section_area == 'product_form' or supported_blocks contains block.type or block.type == '@app'
              case block.type
                when '@app'
                  if section.settings.app_block_area == 'product_form'
                    render 'product-block-app', block: block
                  endif
                when 'title'
                  render 'product-block-title', block: block
                when 'vendor'
                  render 'product-block-vendor', block: block
                when 'price'
                  render 'product-form-component-price', block: block, current_variant: current_variant, price_text_size: block.settings.text_size
                when 'variant_picker'
                  render 'product-form-component-variant-picker', block: block, option_style: block.settings.option_style, hide_option_labels: block.settings.hide_option_labels, hide_sold_out_variants: block.settings.hide_sold_out_variants, hide_unavailable_variants: block.settings.hide_unavailable_variants
                when 'quantity_selector'
                  render 'product-form-component-quantity-selector', block: block, product_form_id: product_form_id
                when 'buy_buttons'
                  render 'product-form-component-buy-buttons', block: block, product_form_id: product_form_id, horizontal_gallery: true
                when 'text'
                  render 'product-block-text', block: block
                when 'richtext'
                  render 'product-block-richtext', block: block
                when 'collapsible_tab'
                  render 'product-block-collapsible-tab', block: block, tab_counter: tab_counter
                  assign tab_counter = tab_counter | plus: 1
                when 'icon_list'
                  render 'product-block-icon-list', block: block
                when 'popup'
                  render 'product-block-popup', block: block, section_color: section_color
                when 'custom_liquid'
                  render 'product-block-custom-liquid', block: block, product: product
                when 'share'
                  echo '<div class="mt-8" ' | append: block.shopify_attributes | append: '>'
                  render 'social-sharing', tag: 'h2', share_title: product.title, share_permalink: product.url, share_image: product, section_color: section_color`
                  echo '</div>'
                when 'information_list'
                  render 'product-block-information-list', block: block, product: product
              endcase
            endif
          endfor
        -%}
      </div>
    </div>
    <div class="product-description {% if no_social_blocks %}lg:col-start-1{% else %}lg:col-start-4{% endif %} product-block-area h-full bg-scheme-background px-section-horizontal-spacing {% unless settings.border_width == 0 %}py-section-vertical-spacing{% endunless %} text-scheme-text lg:col-end-10">
      {% liquid
        assign tab_counter = 0
        for block in section.blocks
          if block.settings.section_area == 'product_description' or block.type == 'description' or block.type == '@app' or block.type == 'complementary'
            case block.type
              when '@app'
                if section.settings.app_block_area == 'product_description'
                  echo '<div class="mt-8" ' | append: block.shopify_attributes | append: '>'
                  render block
                  echo '</div>'
                endif
              when 'description'
                assign enable_collapsible_tabs = block.settings.enable_collapsible_tabs
                assign truncate_description = block.settings.truncate_description
                assign max_words = block.settings.max_words

                render 'product-block-description', enable_collapsible_tabs: enable_collapsible_tabs, truncate_description: truncate_description, max_words: max_words
              when 'text'
                render 'product-block-text', block: block
              when 'richtext'
                render 'product-block-richtext', block: block
              when 'collapsible_tab'
                render 'product-block-collapsible-tab', block: block, tab_counter: tab_counter

                assign tab_counter = tab_counter | plus: 1
              when 'icon_list'
                render 'product-block-icon-list', block: block
              when 'popup'
                render 'product-block-popup', block: block
              when 'custom_liquid'
                render 'product-block-custom-liquid', block: block, product: product
              when 'share'
                echo '<div class="mt-8" ' | append: block.shopify_attributes | append: '>'
                render 'social-sharing', tag: 'h2', share_title: product.title, share_permalink: product.url, share_image: product
                echo '</div>'
              when 'complementary'
                render 'product-block-complementary', block: block
              when 'information_list'
                render 'product-block-information-list', block: block, product: product
            endcase
          endif
        endfor
      %}
    </div>
    {%- unless no_social_blocks -%}
      <div class="product-block-area h-full bg-scheme-background px-section-horizontal-spacing {% unless settings.border_width == 0 %}py-section-vertical-spacing{% endunless %} text-scheme-text lg:col-start-1 lg:col-end-4">
        {% liquid
          assign tab_counter = 0
          for block in section.blocks
            if block.settings.section_area == 'product_extra' or block.type == '@app'
              case block.type
                when '@app'
                  if section.settings.app_block_area == 'product_extra'
                    echo '<div class="mt-8" ' | append: block.shopify_attributes | append: '>'
                    render block
                    echo '</div>'
                  endif
                when 'text'
                  render 'product-block-text', block: block
                when 'richtext'
                  render 'product-block-richtext', block: block
                when 'collapsible_tab'
                  render 'product-block-collapsible-tab', block: block, tab_counter: tab_counter
                  assign tab_counter = tab_counter | plus: 1
                when 'icon_list'
                  render 'product-block-icon-list', block: block
                when 'popup'
                  render 'product-block-popup', block: block
                when 'custom_liquid'
                  render 'product-block-custom-liquid', block: block, product: product
                when 'share'
                  echo '<div class="mt-8" ' | append: block.shopify_attributes | append: '>'
                  render 'social-sharing', tag: 'h2', share_title: product.title, share_permalink: product.url, share_image: product
                  echo '</div>'
                when 'information_list'
                  render 'product-block-information-list', block: block, product: product
              endcase
            endif
          endfor
        %}
      </div>
    {%- endunless -%}
  </div>

  {% unless product == empty %}
    <script type="application/json" id="ModelJson-{{ section.id }}">
      {{ product.media | where: 'media_type', 'model' | json }}
    </script>
    {% render 'product-shopify-xr-script' %}
  {% endunless %}
</section>

{% unless request.design_mode %}
  <script src="{{ 'splide.bundle.min.js' | asset_url }}" type="module"></script>
  <script src="{{ 'product-form.js' | asset_url }}" type="module"></script>
  <script src="{{ 'product.js' | asset_url }}" type="module"></script>
{% endunless %}

{% liquid
  if section.settings.enable_image_zoom
    render 'product-image-zoom'
  endif

