{%- liquid
  assign section_color = section.settings.color_scheme
  assign enable_video_looping = section.settings.enable_video_looping

  assign thumbnails_desktop = section.settings.thumbnails_desktop
  assign thumbnails_mobile = section.settings.thumbnails_mobile

  assign active_thumbnail_style = section.settings.active_thumbnail_style

  assign thumbnails_ratio = section.settings.thumbnails_crop | plus: 0

  assign always_show_product_featured_media_first = section.settings.always_show_product_featured_media_first

  assign models = product.media | where: 'media_type', 'model'

  case section.settings.desktop_media_width
    when 'one-third'
      assign content_width_desktop = 'lg:col-span-8'

      assign media_sizes = '(min-width: 1024px) calc(100vw / 3), 100vw'

      assign vertical_thumbnails_sizes = 'calc((100vw / 3) / 5)'
      assign horizontal_thumbnails_sizes = '(min-width: 1024px) calc((100vw / 3) / 5), 20vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-9 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-4'
      endif
    when 'one-half'
      assign content_width_desktop = 'lg:col-span-6'

      assign media_sizes = '(min-width: 1024px) 50vw, 100vw'

      assign vertical_thumbnails_sizes = '10vw'
      assign horizontal_thumbnails_sizes = '(min-width: 1024px) 10vw, 20vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-7 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-6'
      endif
    when 'three-fifths'
      assign content_width_desktop = 'lg:col-span-5'

      assign media_sizes = '(min-width: 1024px) calc(100vw / 5 * 3), 100vw'

      assign vertical_thumbnails_sizes = 'calc((100vw / 5 * 3) / 5)'
      assign horizontal_thumbnails_sizes = '(min-width: 1024px) calc((100vw / 5 * 3) / 5), 20vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-6 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-7'
      endif
    when 'two-thirds'
      assign content_width_desktop = 'lg:col-span-4'

      assign media_sizes = '(min-width: 1024px) calc(100vw / 3 * 2), 100vw'

      assign vertical_thumbnails_sizes = 'calc((100vw / 3 * 2) / 5)'
      assign horizontal_thumbnails_sizes = '(min-width: 1024px) calc((100vw / 3 * 2) / 5), 20vw'

      if section.settings.desktop_media_position == 'right'
        assign media_width_desktop = 'lg:col-start-5 lg:col-end-13'
      else
        assign media_width_desktop = 'lg:col-span-8'
      endif
  endcase

  assign current_variant = product.selected_or_first_available_variant

  assign featured_media = product.featured_media

  assign media_ids = ''

  if featured_media
    assign media_ids = media_ids | append: featured_media.id | append: ','
  endif

  for media in product.media
    assign media_ids = media_ids | append: media.id | append: ','
  endfor

  assign media_ids_array = media_ids | split: ',' | uniq

  if section.settings.variant_media_behavior == 'scroll'
    assign media_scroll_to = true
  else
    assign media_scroll_to = false
  endif

  assign single_variant_mode = false

  unless product.has_only_default_variant
    assign single_variant_mode = section.settings.single_variant_mode
  endunless

  if single_variant_mode
    assign variants_with_media = product.variants | where: 'featured_media'
    assign first_variant_media = variants_with_media | map: 'featured_media' | first
    assign variant_media_ids_array = variants_with_media | map: 'featured_media' | map: 'id' | uniq

    if always_show_product_featured_media_first
      # If there is no non-variant media, reset some assumptions
      if first_variant_media.position == 1
        assign always_show_product_featured_media_first = false
        assign featured_media = current_variant.featured_media
      endif
    endif
  endif

  assign complementary_products_block = section.blocks | where: 'type', 'complementary' | first
-%}

