<section
  class="grid grid-flow-row-dense grid-cols-1 border-b-gridline border-gridline-color lg:grid-cols-12 lg:gap-gutter lg:bg-gridline-color [&:not(:has(.product-media-container):has(.product-content-container))]:lg:bg-scheme-background"
  id="{{ section.id }}"
  x-data="
    Theme_Product({
      product: {{ product | json | escape }},
      initialVariant: {{ current_variant | json | escape }},
      optionsWithValues: {{ product.options_with_values | json | escape }},
      featuredMediaId: {% if featured_media %}{{ featured_media.id }}{% else %}null{% endif %},
      splideOnDesktop: true,
      mediaScrollTo: {{ media_scroll_to }},
      singleVariantMode: {{ single_variant_mode }},
      alwaysShowProductFeaturedMediaFirst:
        {{ always_show_product_featured_media_first }},
      shouldUpdateHistoryState: true,
      templateSuffix: '{{ template.suffix }}',
    })
  "
  data-product-root="{{ section.id }}"
  data-color-scheme="{{ section_color }}"
>
  {%- liquid
    assign current_variant = product.selected_or_first_available_variant
    assign has_interactive_media = false
    assign image_index = 0

    for media in product.media
      if media.media_type != 'image'
        assign has_interactive_media = true
        break
      endif
    endfor
  -%}
  <div
    class="relative {% if product.media.size > 1 %}pb-7{% endif %} product-media-container bg-scheme-background text-scheme-text lg:pb-0 {{ media_width_desktop }} {% unless settings.fill_image_to_border_edge %}border-b-gridline border-gridline-color lg:border-0{% endunless %} {% if product.media.size > 1 and thumbnails_desktop == 'vertical_carousel' %}lg:grid lg:grid-cols-5 lg:[&>div:nth-of-type(1)]:col-span-1 lg:[&>div:nth-of-type(2)]:col-span-4 {% if section.settings.desktop_media_position == 'right' %}[&>div:nth-of-type(1)]:order-2{% endif %}{% endif %}"
    data-product-media-container
  >
    {%- liquid
      if product.media.size > 1 and thumbnails_desktop == 'vertical_carousel'
        render 'product-thumbnails-vertical-carousel', desktop_media_position: section.settings.desktop_media_position, media_ids_array: media_ids_array, thumbnails_ratio: thumbnails_ratio, active_thumbnail_style: active_thumbnail_style, sizes: vertical_thumbnails_sizes, single_variant_mode: single_variant_mode, variant_media_ids_array: variant_media_ids_array
      endif
    -%}
    <div
      class="splide splide--product lg:!sticky lg:top-sticky-header-less-gridline lg:-mb-gridline"
      data-drag-disabled="{{ has_interactive_media }}"
      {% if product.media.size > 1 %}
        data-slideshow-enabled="true"
      {% endif %}
      x-ref="splide"
    >
      <div class="splide__track border-b-gridline border-gridline-color transition-[max-height]">
        <ul
          id="media-list-{{ product.id }}-{{ section.id }}"
          class="splide__list lg:grid lg:w-full lg:grid-cols-1"
          x-ref="mediaList"
        >
          {% for media_id_string in media_ids_array %}
            {%- liquid
              assign media_id = media_id_string | plus: 0
              assign media = product.media | where: 'id', media_id | first

              assign preload = false
              assign loading = 'lazy'

              if section.index == 1 and forloop.first
                assign preload = true
              endif

              if section.index <= 3
                if forloop.index <= 2
                  assign loading = 'eager'
                elsif always_show_product_featured_media_first == false and media_id == current_variant.featured_media.id
                  assign loading = 'eager'
                endif
              endif

              if single_variant_mode
                if forloop.first
                  assign media_group_id = media.id
                endif

                if variant_media_ids_array contains media.id
                  assign media_group_id = media.id
                endif
              endif
            -%}
            <li
              class="splide__slide bg-scheme-background {% unless forloop.first %}[.splide:not(.is-active)_&]:hidden{% endunless %}"
              data-index="{{ forloop.index0 }}"
              {% if single_variant_mode %}
                {% if media_group_id %}
                  data-media-group-id="{{ media_group_id }}"
                {% endif %}
              {% endif %}
            >
              {%- render 'product-media',
                media: media,
                sizes: media_sizes,
                image_index: image_index,
                scroll_to: media_scroll_to,
                enable_video_looping: enable_video_looping,
                needs_desktop_padding_on_wrapper: true,
                preload: preload,
                loading: loading
              -%}
            </li>

            {%- liquid
              if media.media_type == 'image'
                assign image_index = image_index | plus: 1
              endif
            -%}
          {% endfor %}
        </ul>
      </div>
      {% assign first_3d_model = models | first %}
      {%- if first_3d_model %}
        <div class="border-b-gridline border-gridline-color px-2 py-section-vertical-spacing text-center lg:px-4 [&:has([data-shopify-xr-hidden])]:hidden">
          <button
            aria-label="{{ 'products.product.view_in_space_label' | t }}"
            class="product-single__view-in-space my-1 w-full max-w-sm border-text border-scheme-text py-2 pl-2 pr-4 text-center"
            data-shopify-xr
            data-shopify-model3d-id="{{ first_3d_model.id }}"
            data-shopify-title="{{ product.title }}"
            data-shopify-xr-hidden
          >
            <span class="inline-block w-6 align-middle">
              {%- render 'icon-3d-model' -%}</span
            ><span class="text-sm">
              {{- 'products.product.view_in_space' | t -}}
            </span>
          </button>
        </div>
      {%- endif -%}

      {%- if product.media.size > 1 -%}
        {% liquid
          if thumbnails_desktop == 'grid' or thumbnails_mobile == 'grid'
            assign mobile_only = false
            assign desktop_only = false

            if thumbnails_desktop != 'grid'
              assign mobile_only = true
            endif

            if thumbnails_mobile != 'grid'
              assign desktop_only = true
            endif
            if single_variant_mode
              render 'product-thumbnails-grid-single-variant-mode', media_ids_array: media_ids_array, variant_media_ids_array: variant_media_ids_array, thumbnails_ratio: thumbnails_ratio, active_thumbnail_style: active_thumbnail_style, sizes: horizontal_thumbnails_sizes, mobile_only: mobile_only, desktop_only: desktop_only
            else
              render 'product-thumbnails-grid', media_ids_array: media_ids_array, thumbnails_ratio: thumbnails_ratio, active_thumbnail_style: active_thumbnail_style, sizes: horizontal_thumbnails_sizes, mobile_only: mobile_only, desktop_only: desktop_only
            endif
          endif

          if thumbnails_desktop == 'horizontal_carousel' or thumbnails_mobile == 'horizontal_carousel'
            assign mobile_only = false
            assign desktop_only = false

            if thumbnails_desktop != 'horizontal_carousel'
              assign mobile_only = true
            endif

            if thumbnails_mobile != 'horizontal_carousel'
              assign desktop_only = true
            endif

            render 'product-thumbnails-horizontal-carousel', desktop_media_position: section.settings.desktop_media_position, media_ids_array: media_ids_array, thumbnails_ratio: thumbnails_ratio, active_thumbnail_style: active_thumbnail_style, sizes: horizontal_thumbnails_sizes, mobile_only: mobile_only, desktop_only: desktop_only, single_variant_mode: single_variant_mode, variant_media_ids_array: variant_media_ids_array
          endif
        %}
      {%- endif -%}

      {% if product.media.size > 1 %}
        {%- liquid
          assign show_nav_on_mobile = false
          assign show_nav_on_desktop = false

          if thumbnails_mobile == 'none' or thumbnails_mobile == 'horizontal_carousel'
            assign show_nav_on_mobile = true
          endif

          if thumbnails_desktop contains 'carousel'
            assign show_nav_on_desktop = true
          endif

          assign nav_display_classes = ''

          if show_nav_on_mobile
            assign nav_display_classes = 'grid'
          else
            assign nav_display_classes = 'hidden'
          endif

          if show_nav_on_desktop
            assign nav_display_classes = nav_display_classes | append: ' lg:grid'
          else
            assign nav_display_classes = nav_display_classes | append: ' lg:hidden'
          endif
        -%}
        <div
          class="{{ nav_display_classes }} min-h-[theme(spacing.3)] grid-cols-[minmax(0,_1fr)_auto] gap-2 px-1 py-section-vertical-spacing-half no-js:hidden lg:mb-gridline"
          data-slideshow-navigation
          x-data="
            {
              paginationIsWrapped: false,
              checkIfWrapped() {
                this.paginationIsWrapped = hasWrappedChildren(this.$refs.pagination)
              }
            }
          "
          x-init="checkIfWrapped"
          @resize.window.debounce.250="checkIfWrapped"
          x-show="slideCount > 1"
          :class="{ 'opacity-0' : !splideIsReady }"
        >
          <ul x-ref="pagination" class="splide__pagination"></ul>
          <div
            class="splide__arrows col-end-last flex items-center justify-end gap-1 text-scheme-text"
            :class="{ 'items-start pt-0.5' : paginationIsWrapped, 'items-center' : !paginationIsWrapped }"
          >
            <button class="splide__arrow splide__arrow--prev w-8">
              <span class="sr-only">
                {{- 'sections.slideshow.previous_slide' | t -}}
              </span>
              <span class="block">{% render 'icon-arrow-left' %}</span>
            </button>
            <button class="splide__arrow splide__arrow--next w-8">
              <span class="sr-only">
                {{- 'sections.slideshow.next_slide' | t -}}
              </span>
              <span class="block">{% render 'icon-arrow-right' %}</span>
            </button>
          </div>
        </div>
      {% endif %}
    </div>
  </div>

  <div
    class="product-content-container bg-scheme-background px-2 text-scheme-text lg:px-4 {{ content_width_desktop }}"
  >
    <div
      class="product-block-area py-section-vertical-spacing lg:sticky lg:top-sticky-header {{ section.settings.max_width_of_content }}"
      data-product-content
    >
      {%- render 'product-form',
        current_variant: current_variant,
        section_color: section_color
      -%}
    </div>
  </div>

  {% unless product == empty %}
    {% if models.size %}
      <script type="application/json" id="ModelJson-{{ section.id }}">
        {{ product.media | where: 'media_type', 'model' | json }}
      </script>
      {% render 'product-shopify-xr-script' %}
    {% endif %}
  {% endunless %}
</section>

{% unless request.design_mode %}
