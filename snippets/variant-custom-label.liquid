{% if metafield_address != blank %}
  {% liquid
    assign metafield_namespace = metafield_address | split: '.' | first
    assign metafield_key = metafield_address | split: '.' | last

    if variant.metafields[metafield_namespace][metafield_key]
      echo variant.metafields[metafield_namespace][metafield_key]
    endif
  %}
{% endif %}
