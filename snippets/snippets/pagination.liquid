<div
  class="{% unless no_border %}border-t-gridline border-gridline-color {% endunless %}bg-scheme-background px-section-horizontal-spacing pb-theme-double pt-theme text-right text-sm text-scheme-text md:text-base"
  data-color-scheme="{{ section_color }}"
>
  <ul class="pagination flex items-center">
    <li class="mr-auto w-28 text-left md:w-1/3">
      {% if paginate.previous.is_link %}
        <a
          class="theme-link theme-link--back hover:text-scheme-accent"
          href="{{ paginate.previous.url }}"
        >
          {{- 'general.pagination.previous' | t -}}
        </a>
      {% endif %}
    </li>
    {%- for part in paginate.parts -%}
      {%- if part.is_link -%}
        <li class="hidden md:inline-block">
          <a
            class="inline-block border-b-text border-transparent px-2 py-1"
            href="{{ part.url }}"
          >
            <span class="sr-only">page</span> {{ part.title }}
          </a>
        </li>
      {%- else -%}
        {%- if part.title == paginate.current_page -%}
          <li
            class="active hidden border-b-text border-scheme-text px-2 py-1 md:inline-block"
            aria-current="page"
          >
            <span class="sr-only">page</span> {{ part.title }}
          </li>
        {%- else -%}
          <li class="hidden border-b-text border-transparent px-2 py-1 md:inline-block">
            <span class="sr-only">page</span> {{ part.title }}
          </li>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
    <li class="ml-auto w-28 text-right md:w-1/3">
      {% if paginate.next.is_link %}
        <a
          class="theme-link hover:text-scheme-accent"
          href="{{ paginate.next.url }}"
        >
          {{- 'general.pagination.next' | t -}}
        </a>
      {% endif %}
    </li>
  </ul>
</div>
